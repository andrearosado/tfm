journal = {Transportation Research Part A: Policy and Practice},
keywords = {Corridor,FRAGSTATS,Landscape,Light Rail,Sustainability},
pages = {330--345},
publisher = {Elsevier Ltd},
title = {{Integrating land use and transport practice through spatial metrics}},
url = {http://dx.doi.org/10.1016/j.tra.2016.06.023},
volume = {91},
year = {2016}
}
