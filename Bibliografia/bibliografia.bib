issn = {14429985},
journal = {Austral Ecology},
keywords = {Population management,Resource quality,Sex-based dispersal,Spatial heterogeneity,Wild rabbit},
number = {1},
pages = {41--49},
title = {{Differential impacts of habitat heterogeneity on male and female connectivity in a spatially structured pest system}},
volume = {34},
year = {2009}
}
