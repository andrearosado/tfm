isbn = {0308-518X},
issn = {0308518X},
journal = {Environment and Planning A},
number = {8},
pages = {1443--1458},
title = {{The use of remote sensing and landscape metrics to describe structures and changes in urban land uses}},
volume = {34},
year = {2002}
